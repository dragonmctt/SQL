SELECT * FROM movie_cast;

SELECT movie_title Movie, a.studio_name Studio, b.full_name Star
FROM movie_cast
    JOIN studios a
    ON movie_cast.studio_id=a.id
    JOIN famous_people b
    ON movie_cast.main_star_id=b.id
